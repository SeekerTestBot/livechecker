#!/usr/bin/env bash
# Usage: ./update languages.txt
curl -o $LIVECHECKER_FILE -L $LIVECHECKER_GIST/raw
brew ruby print-formulae.rb $LIVECHECKER_FILE > $HOME/.brew_livecheck_watchlist
if [ $? -eq 0 ]; then
  if [ ! -z "$LIVECHECKER_TAP" ]; then
    brew tap $LIVECHECKER_TAP
  fi
  brew ${LIVECHECKER_COMMAND:-livecheck} --newer-only --quiet > $LIVECHECKER_FILE || true
fi
cat $LIVECHECKER_FILE
echo >> $LIVECHECKER_FILE
exit 0
